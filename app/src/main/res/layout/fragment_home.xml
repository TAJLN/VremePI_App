<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.pregled.PregledFragment" android:background="#FFFFFF"

>

    <TextView
            android:layout_width="110dp"
            android:layout_height="25dp" android:id="@+id/text_svetloba"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="244dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="143dp"
            android:textSize="20sp"
            android:textStyle="bold"/>
    <TextView
            android:text="Svetloba:"
            android:layout_width="95dp"
            android:layout_height="30dp" android:id="@+id/textView2"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="244dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="48dp" android:textSize="20sp"/>
    <ImageView
            android:src="@drawable/sun"
            android:layout_width="25dp"
            android:layout_height="25dp" android:id="@+id/sun"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="244dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:srcCompat="@drawable/sun"/>
    <TextView
            android:layout_width="100dp"
            android:layout_height="25dp" android:id="@+id/text_pritisk"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="200dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="302dp"
            android:textSize="20sp"
            android:textStyle="bold"/>
    <TextView
            android:text="Pritisk:"
            android:layout_width="70dp"
            android:layout_height="30dp" android:id="@+id/textView5"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="200dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="232dp" android:textSize="20sp"/>
    <ImageView
            android:src="@drawable/barometersimple"
            android:layout_width="25dp"
            android:layout_height="25dp" android:id="@+id/barometer"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="200dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="200dp" app:srcCompat="@drawable/barometer"/>
    <TextView
            android:id="@+id/text_lastUpdate"
            android:layout_width="396dp"
            android:layout_height="45dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:textAlignment="center"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.00999999"
            android:textColor="#919191"/>
    <TextView
            android:layout_width="395dp"
            android:layout_height="118dp" android:id="@+id/text_temp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="69dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:textSize="60sp" android:textAlignment="center"
            android:textStyle="bold"/>
    <ImageView
            android:src="@drawable/dropletthick"
            android:layout_width="25dp"
            android:layout_height="25dp" android:id="@+id/droplet"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="200dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:srcCompat="@drawable/dropletthick"/>
    <TextView
            android:text="Vlaga:"
            android:layout_width="65dp"
            android:layout_height="30dp" android:id="@+id/textView4"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="200dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="48dp" android:textSize="20sp"/>
    <TextView
            android:layout_width="75dp"
            android:layout_height="25dp" android:id="@+id/text_vlaga"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="200dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="115dp"
            android:textSize="20sp"
            android:textStyle="bold"/>
</androidx.constraintlayout.widget.ConstraintLayout>